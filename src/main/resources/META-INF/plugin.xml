            <add-to-group group-id="MainMenu" anchor="first"/>

            <action id="org.example.demo_plugin.MainMenuAction"
                    class="org.example.demo_plugin.main_menu.MainMenuAction"
                    text="Main Menu Action"
                    description="Action in custom menu"/>
